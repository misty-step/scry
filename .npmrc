engine-strict=true
package-manager-strict=true

# Audit configuration
# Only fail on critical vulnerabilities (dev dependencies often have low-severity issues)
audit-level=critical

# Allow specific packages to run build scripts
# lefthook needs postinstall to set up git hooks
enable-pre-post-scripts[]=lefthook

# Hoist OpenTelemetry instrumentation packages to root for Turbopack
# Fixes "can't be external" warnings (Next.js #68805)
public-hoist-pattern[]=import-in-the-middle
public-hoist-pattern[]=require-in-the-middle