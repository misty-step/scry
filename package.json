{
  "name": "scry",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=20.9.0",
    "pnpm": ">=10.0.0"
  },
  "//": "═══════════════════════════════════════════════════════════════════════════",
  "// NOTE": "Build script contexts:",
  "// build": "Used by vercel-build.sh --cmd flag (Convex already deployed)",
  "// build:prod": "Standalone production build with atomic deployment",
  "// build:local": "Local production build for testing (deploys then builds)",
  "// dev": "Normal development with hot reload (Convex + Next.js)",
  "scripts": {
    "dev": "concurrently \"next dev --turbopack\" \"convex dev\"",
    "build": "next build",
    "build:prod": "npx convex deploy --cmd 'next build'",
    "build:local": "npx convex deploy && next build",
    "start": "next start",
    "test": "vitest --run",
    "test:ci": "vitest --run --coverage",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:contract": "vitest --run tests/api-contract.test.ts",
    "test:lighthouse": "lighthouse http://localhost:3000/quiz-mode --view --preset=desktop --only-categories=performance",
    "test:tti": "node --input-type=module scripts/lighthouse-tti-test.js",
    "test:perf": "node scripts/measure-review-performance.js",
    "lint": "next lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "assets:generate": "node scripts/generate-static-assets.js",
    "convex:deploy": "convex deploy",
    "prepare": "lefthook install",
    "size": "size-limit",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "analyze": "ANALYZE=true next build",
    "test:e2e:smoke": "playwright test --grep @smoke --project=chromium"
  },
  "dependencies": {
    "@ai-sdk/google": "^2.0.40",
    "@ai-sdk/openai": "^2.0.71",
    "@clerk/clerk-react": "^5.56.2",
    "@clerk/nextjs": "^6.35.4",
    "@clerk/themes": "^2.4.39",
    "@formkit/auto-animate": "^0.9.0",
    "@hookform/resolvers": "^5.2.2",
    "@openrouter/ai-sdk-provider": "^1.2.5",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@sentry/nextjs": "^10.26.0",
    "@tanstack/react-table": "^8.21.3",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "ai": "^5.0.98",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.29.3",
    "convex-helpers": "^0.1.105",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.554.0",
    "next": "16.0.3",
    "next-themes": "^0.4.6",
    "openai": "^6.9.1",
    "pino": "^10.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.66.1",
    "react-hotkeys-hook": "^5.2.1",
    "resend": "^6.5.2",
    "sonner": "^2.0.7",
    "svix": "^1.81.0",
    "tailwind-merge": "^3.4.0",
    "ts-fsrs": "^5.2.3",
    "ws": "^8.18.3",
    "zod": "^4.1.12",
    "zod-to-json-schema": "^3.25.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@clerk/testing": "^1.13.18",
    "@eslint/eslintrc": "^3.3.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@next/bundle-analyzer": "^16.0.3",
    "@playwright/test": "^1.56.1",
    "@prettier/plugin-oxc": "^0.0.5",
    "@sentry/cli": "^2.58.2",
    "@size-limit/preset-app": "^11.2.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/nodemailer": "^7.0.4",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.13",
    "concurrently": "^9.2.1",
    "content-tag": "^4.0.0",
    "esbuild": "0.25.12",
    "eslint": "^9.39.1",
    "eslint-config-next": "16.0.3",
    "eslint-config-prettier": "^10.1.8",
    "happy-dom": "^20.0.10",
    "lefthook": "^2.0.4",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "prettier-plugin-ember-template-tag": "^2.1.0",
    "size-limit": "^11.2.0",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
